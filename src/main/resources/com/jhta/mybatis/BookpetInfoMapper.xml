<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.BookpetInfoMapper">
	<select id="selectBpet" parameterType="int" resultType="com.jhta.project.vo.MpetInfoVo">
		select aa.* from mpetinfo aa,bookpetinfo bb where aa.pi_num in(bb.pi_num) and bb.bk_num=#{value}
	</select>
	<insert id="insertBpet" parameterType="com.jhta.project.vo.BookpetInfoVo">
		insert into bookpetinfo values(SEQ_BOOKPETINFO_BPI_NUM.nextval,#{bk_num},#{pi_num})
	</insert>
</mapper>